<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="public/css/main.css">
  </head>
  <body>
    <h1>{{title}}</h1>

    <ul>
      {{#each events}}
        <li>
          <a href="/events/{{_id}}"><h2>{{name}}</h2></a>
          <p><strong>Date:</strong> {{date}}</p>
          <p><strong>Start Time:</strong> {{starttime}}</p>
          <p><strong>End Time:</strong> {{endtime}}</p>
          <p><strong>Location:</strong> {{location}}</p>
        </li>
      {{/each}}
    </ul>

    <footer class="footer-navigation">
      <form class = "ib_form" action="/login" method="POST">
        <button type="submit" class="footer-btn">Back to Homepage</button>
      </form>
      <form class = "ib_form" action="/myaccount" method="POST">
        <button type="submit" class="footer-btn">My Account</button>
      </form>
    </footer>  

  </body>
</html>